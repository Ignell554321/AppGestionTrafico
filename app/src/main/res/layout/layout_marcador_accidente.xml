<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#b3414b"
        android:padding="8dp"
        android:src="@drawable/ic_accidente"/>

    <TextView
        android:id="@+id/text_dialog"
        android:layout_margin="42dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:text="MARCADOR DE ACCIDENTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_marcador_trafico_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Simple"
            android:background="#293249"
            android:textSize="15dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btn_marcador_trafico_doble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Doble"
            android:background="#293249"
            android:textSize="15dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button

            android:id="@+id/btn_marcador_trafico_cancelar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="#293249"
            android:textSize="15dp"
            android:layout_marginRight="5dp"/>


    </LinearLayout>

</LinearLayout>